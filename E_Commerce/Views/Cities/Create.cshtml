@model E_Commerce.Models.City

@{
    ViewBag.Title = "Create city";
}

<h2>Create city</h2>
<script>
    $(document).ready(function () {
        $('select').formSelect();
    });
</script>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "black-text" })
            <div class="form-group">
                @*nombrea mostrar en caja texto NAME*@
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "black-text" })
                <div class="col l12">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input-field col s6" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "black-test" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DepartmentId, "Department", htmlAttributes: new { @class = "black-text" })
                <div class="col l12">
                    @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn waves-effect waves-light btn-small" />
                    @Html.ActionLink("Back to List", "Index", new { },new { @class= "btn waves-effect waves-light btn-small" })
                </div>
            </div>
        </div>
    }
</div>